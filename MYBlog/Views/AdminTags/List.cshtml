@{
}
@model List<MYBlog.Models.Domain.Tag>

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Show All Tag - Admin Functionality</h1>

    </div>

</div>
<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Id</th>
                    <th>Name</th>
                    <th>Display Name</th>
                    <th></th>
                </tr>
                <tbody>
                    @foreach (var @tags in Model)
                    {
                        <tr>
                            <td>@tags.Id</td>
                        <td>@tags.Name</td>
                        <td>@tags.DisplayName</td>
                        <td><a asp-area="" asp-controller="AdminTags" asp-action="Edit" asp-route-Id="@tags.Id">Edit</a></td>
                    </tr>
                }
            </tbody>
        </thead>

        </table>
    }
    else
    {
        <p1>No Tags Found</p1>
    }

</div>

