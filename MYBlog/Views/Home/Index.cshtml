@model MYBlog.Models.ViewModels.BlogpostTag
@{
    ViewData["Title"] = "Home Page";
}

<div class="container col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-5 py-5">
        <div class="col-12 col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">
                MyBlog - The Dev Blog
            </h1>
            <p class="lead">
                MyBlog is the home to coding blogs covering a vast 
                range of topics like HTML,CSS,Javascript,Asp.NET,C#
                ,Angular etc. Want to read the latest dev articles?
                Join the MyBlog app and get weekly blogs in your email.
            </p>
        </div>
        <div class="col-12 col-lg-6">
            <img src="https://images.pexels.com/photos/1779487/pexels-photo-1779487.jpeg?auto=compress&cs=tinysrgb&w=600" class="d-block mx-lg-auto img-fluid" width="300"/>
        </div>
    </div>
</div>
<div class="container">
    <div class="row justify-content-center">
    <div class="d-flex col-6">
        @foreach (var tag in Model.tags)
        {
            <span class="badge bg-secondary me-1">@tag.Name</span>
        }
    </div>
    </div>
</div>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-6">
            @foreach(var blogpost in Model.blogposts)
            {
                <div class="mb-5 bg-light box-shadow py-5 px-5">
                   <center> <img src="@blogpost.FeaturedImageURL"  width="450" height="350"/>
                    
                    </center>
                    <h2 class="mb-2">@blogpost.Heading</h2>
                    <p class="mb-2">
                        Author: @blogpost.Author
                        <br/>
                        Published Date: @blogpost.PublishedDate
                    </p>
                    <div class="d-flex">
                        @foreach (var tag in blogpost.Tags)
                        {
                            <span class="badge bg-secondary me-1">@tag.Name</span>
                        }
                    </div>
                    <p class="mb-2">
                        @blogpost.ShortDescription
                    </p>
                    <a class="btn btn-dark" asp-area="" asp-controller="SingleBlog" asp-action="Index" asp-route-urlHandle="@blogpost.URLHandle">Read More...</a>
                </div>
            }
        </div>
    </div>
</div>
